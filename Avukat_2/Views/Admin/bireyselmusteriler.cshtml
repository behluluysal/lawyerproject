<script>
    // Get the modal
    var modal = document.getElementById("myModal");
    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];
    function openModal(item) {
        var id = item.id;
        $("#musteriid").val(id);
        $("#name").val(document.getElementById("td1+" + id).innerText);
        $("#sname").val(document.getElementById("td2+" + id).innerText);
        $("#tc").val(document.getElementById("td3+" + id).innerText);
        $("#yas").val(document.getElementById("td4+" + id).innerText);
        var tarhi = document.getElementById("td5+" + id).innerText;
        var gun = tarhi[0] + tarhi[1];
        var ay = tarhi[3] + tarhi[4];
        var yil = tarhi[6] + tarhi[7] + tarhi[8] + tarhi[9];
        $("#dt").val(yil + "-" + ay + "-" + gun);
        $("#adres").val(document.getElementById("td6+" + id).textContent);
        $("#phone").val(document.getElementById("td7+" + id).innerText);
        $("#evphone").val(document.getElementById("td8+" + id).innerText);
        $("#email").val(document.getElementById("td9+" + id).innerText);


        modal.style.display = "block";
    };
    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }
    function closeModal() {
        modal.style.display = "none";
    };
    function goster() {
        new PNotify({
            title: 'Müşteri Düzenleme Başarılı',
            text: 'Müşteri bilgileri veritabanınıza başarılı bir şekilde aktarılmıştır!',
            type: 'success',
            styling: 'bootstrap3',
            delay: 2500,
        });
    };
    function gostererror() {
        new PNotify({
            title: 'Bilinmeyen Hata!',
            text: 'İşleminiz yapılırken bilinmeyen bir hata oluştu. Lütfen teknik ekibe başvurunuz.',
            type: 'error',
            styling: 'bootstrap3',
            delay: 2500,
        });
    };
    function gosterinfo() {
        new PNotify({
            title: 'Uyarı',
            text: 'Girdiğiniz T.C Kimlik numarası başka bir müşteri ile eşleşmektedir. Lütfen bilgileri kontrol ediniz.',
            type: 'info',
            styling: 'bootstrap3',
            delay: 2500,
        });
    };
    $("#phone").inputmask("+99 (999) 999 9999", { "clearIncomplete": true });
    $("#evphone").inputmask("+99 (999) 999 9999", { "clearIncomplete": true });
</script>


@{
    if (TempData["duzenle"] != null && TempData["duzenle"].ToString() != "")
    {
        if (TempData["duzenle"].ToString() == "tcmatch")
        {
            <script>
                gosterinfo();
            </script>
        }
        else if (TempData["duzenle"].ToString() == "success")
        {
            <script>
                goster();
            </script>
        }
        else
        {
            <script>
                gostererror();
            </script>
        }
        TempData["duzenle"] = null;
    }



}






