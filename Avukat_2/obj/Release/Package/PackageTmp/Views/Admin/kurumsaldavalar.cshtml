                new PNotify({
                    title: "Dava güncellemesi başarılı.",
                    text: "Dava değişiklikleri başarılı bir şekilde veritabanına aktarılmıştır",
                    type: 'success',
                    styling: 'bootstrap3',
                    delay: 2500
                });
            }
            else if (data == "match") {
                new PNotify({
                    title: "Uyarı.",
                    text: item3 + " Adlı müşterinin " + item + " isminde bir davası olduğu için işlem gerçekleştirilememiştir. Aynı müşterinin dava isimleri birbirinden farklı olmalıdır!",
                    type: 'success',
                    styling: 'bootstrap3',
                    delay: 2500
                });
            }
