        var item4 = document.getElementById("davabt").value;
        
        var avukat = document.getElementById("avukatdrop");

        var item5 = avukat.options[avukat.selectedIndex].text;
        var item6 = document.getElementById("davatipdrop").value;


        $.post(url, { davaname: item, davaaciklama: item1, davaucret: item2, kurumadi: item3, davabt: item4, avukat: item5, davaturu: item6, davaid: davaidbuton, tippp:"kurumsal"}, function (data) {
